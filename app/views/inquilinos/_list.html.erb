<div class="clients-list">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> Inquilinos(<%=@inquilinos.count%>)</a></li>
    </ul>
    <div class="tab-content">
        <div id="tab-1" class="tab-pane active">
            <div class="full-height-scroll">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                          <tr>
                              <td><strong>Nombre</strong></td>
                              <td><strong>Fecha de Nacimiento</strong></td>
                              <td><strong>Pais de Nacimiento</strong></td>
                              <td><strong>CURP</strong></td>
                              <td><strong>RFC</strong></td>
                              <td><strong>Acciones</strong></td>
                          </tr>
                          <% @inquilinos.each do |inquilino| %>
                        <tr>
                            <td><%= inquilino.nombre%></td>
                            <td> <%= inquilino.nacimiento%></td>
                            <td><%= inquilino.nacionalidad%></td>
                            <td> <%= inquilino.curp%></td>
                            <td><%= inquilino.rfc%></td>
                            <td class="client-status">
                              <%= link_to "Ver", inquilino_path(inquilino), class: "btn btn-xs btn-info" %>
                            <%= link_to "Editar", edit_inquilino_path(inquilino), class: "btn btn-xs btn-primary" %>
                              <%= link_to "Borrar", inquilino_path(inquilino), method: :delete,
                                                                data: { confirm: "Â¿Estas seguro que quieres borrar a este inquilino?"},
                                                                class: "btn btn-xs btn-danger" %></td>
                        </tr>
                        <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
