

  <div class="wrapper wrapper-content  animated fadeInRight">
      <div class="row">
          <div class="col-sm-12">
              <div class="ibox">
                  <div class="ibox-content">
                      <span class="text-muted small pull-right">Ultima modificacion <i class="fa fa-clock-o"></i> <%=@actualizado%></span>
                      <h2>Inquilino</h2>
                      <p>
                          Estos son todos tus inquilino, haz click en editar para modificar sus datos
                      </p>
                      <div class="input-group">
                          <input type="text" placeholder="Search client " class="input form-control">
                          <span class="input-group-btn">
                              <button type="button" class="btn btn btn-primary"> <i class="fa fa-search"></i> Search</button>
                          </span>
                      </div>
                      <div class="clients-list">
                          <ul class="nav nav-tabs">
                              <span class="pull-right small text-muted">Tienes <%=@inquilinos.count%> Inquilinos</span>
                              <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> Inquilinos</a></li>
                          </ul>
                          <div class="tab-content">
                              <div id="tab-1" class="tab-pane active">
                                  <div class="full-height-scroll">
                                      <div class="table-responsive">
                                          <table class="table table-striped table-hover">
                                              <tbody>
                                                <tr>
                                                    <td><strong>Nombre</strong></td>
                                                    <td><strong>Fecha de Nacimiento</strong></td>
                                                    <td><strong>Pais de Nacimiento</strong></td>
                                                    <td><strong>CURP</strong></td>
                                                    <td><strong>RFC</strong></td>
                                                    <td><strong>Acciones</strong></td>
                                                </tr>
                                                <% @inquilinos.each do |inquilino| %>
                                              <tr>
                                                  <td><%= inquilino.nombre%></td>
                                                  <td> <%= inquilino.nacimiento%></td>
                                                  <td><%= inquilino.nacionalidad%></td>
                                                  <td> <%= inquilino.curp%></td>
                                                  <td><%= inquilino.rfc%></td>
                                                  <td class="client-status">  <%= link_to "Editar", edit_inquilino_path(inquilino), class: "btn btn-xs btn-primary" %>
                                                    <%= link_to "Borrar", inquilino_path(inquilino), method: :delete,
                                                                                      data: { confirm: "Â¿Estas seguro que quieres borrar a este inquilino?"},
                                                                                      class: "btn btn-xs btn-danger" %></td>
                                              </tr>
                                              <%end%>
                                              </tbody>
                                          </table>
                                      </div>
                                  </div>
                              </div>
                          </div>

                      </div>
                  </div>
              </div>
          </div>
        </div>
    </div>
