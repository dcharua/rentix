<div class="clients-list">
    <ul class="nav nav-tabs">
        <span class="pull-right small text-muted">Tienes <%=@gastos.count%> Gastos</span>
        <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-usd"></i> Gastos</a></li>
    </ul>
    <div class="tab-content">
        <div id="tab-1" class="tab-pane active">
            <div class="full-height-scroll">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                          <tr>
                              <td><strong>Inquilino</strong></td>
                              <td><strong>Propiedad</strong></td>
                              <td><strong>Categoría</strong></td>
                              <td><strong>Monto</strong></td>
                              <td><strong>Fecha</strong></td>
                              <td><strong>Acciones</strong></td>
                          </tr>
                          <% @gastos.each do |gasto|  %>
                        <tr>
                          <% if gasto.rentas.nil?%>
                            <td> N/A </td>
                            <td> N/A </td>
                              <% else%>
                            <td><%= get_inquilinos(gasto.rentas.inquilino_id).nombre%></td>
                            <td> <%= get_propiedads(gasto.rentas.propiedad_id).nombre%></td>
                              <% end%>
                            <td><%= gasto.categoria.to_label%></td>
                            <td><%= gasto.monto%></td>
                            <td> <%= gasto.fecha%></td>
                            <td class="client-status">  <%= link_to "Editar", edit_gasto_path(gasto), class: "btn btn-xs btn-primary" %>
                              <%= link_to "Borrar", gasto_path(gasto), method: :delete,
                                                                data: { confirm: "¿Estas seguro que quieres borrar a este gasto?"},
                                                                class: "btn btn-xs btn-danger" %></td>
                        </tr>
                        <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
