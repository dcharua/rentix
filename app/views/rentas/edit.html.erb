<%= render 'shared/errors', obj: @renta %>
<script type="text/javascript">

$(document).ready(function() {
  $(".pais").select2();
  language: "es"

});
</script>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Introduce los datos de la renta a renovar</h5>
            </div>
            <div class="ibox-content">
              <%= form_for(@renta, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                      <div class="form-group">
                        <%= f.label :final, "Fecha de TerminaciÃ³n", class: "col-md-2 control-label" %>
                          <div class="col-md-4">
                            <%= f.text_field :final, data:{ provide:'datepicker' }, class:"datepicker form-control-2"%>
                          </div>

                      </div>
                      <div class="form-group">
                        <%= f.label :costo, "Nueva mensualidad", class: "col-md-2 control-label", required: true %>
                          <div class="col-md-4">
                            <%= f.number_field :costo %>
                          </div>
                        </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <%= f.submit 'Renovar', class: 'btn btn-primary btn-lg center' %>
                        </div>
                    </div>
                  <% end %>
            </div>
        </div>
    </div>
</div>
