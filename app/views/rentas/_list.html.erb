

<div class="clients-list">
    <ul class="nav nav-tabs">
        <span class="pull-right small text-muted">Tienes <%= @rentas.count %> Rentas</span>
        <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-home"></i> Activas</a></li>
        <li class = ""><a data-toggle="tab" href="#tab-2"><i class="fa fa-home"></i> Terminadas</a></li>
    </ul>


    <div class="tab-content">
        <div id="tab-1" class="tab-pane active">
            <div class="full-height-scroll">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                          <%  if rentas_activas.size > 0  %>
                          <tr>
                              <td><strong>Inquilino</strong></td>
                              <td><strong>Propiedad</strong></td>
                              <td><strong>Mensualidad</strong></td>
                              <td><strong>Desde</strong></td>
                              <td><strong>Hasta</strong></td>
                              <td><strong>Dia de Pago</strong></td>
                              <td><strong>Acciones</strong></td>
                          </tr>
                          <%rentas_activas.each do |renta|%>
                        <tr>
                            <td><%= get_inquilinos(renta.inquilino_id).nombre%></td>
                            <td> <%= get_propiedads(renta.propiedad_id).to_label%></td>
                            <td><%= renta.costo%></td>
                            <td> <%= renta.inicio%></td>
                            <td><%= renta.final%></td>
                            <td><%= renta.dia%></td>
                            <td class="client-status">
                              <%= link_to "Ver", renta_path(renta), class: "btn btn-xs btn-info" %>
                              <%= link_to "Terminar", rentas_terminar_path(renta),
                                                                data: { confirm: "¿Estas seguro que quieres terminar esta renta?"},
                                                                class: "btn btn-xs btn-danger" %></td>
                        </tr>
                        <%end %>
                        <%end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div id="tab-2" class="tab-pane">
            <div class="full-height-scroll">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <%  if rentas_terminadas.size > 0  %>
                          <tr>
                              <td><strong>Inquilino</strong></td>
                              <td><strong>Propiedad</strong></td>
                              <td><strong>Mensualidad</strong></td>
                              <td><strong>Desde</strong></td>
                              <td><strong>Hasta</strong></td>
                              <td><strong>Dia de Pago</strong></td>
                              <td><strong>Acciones</strong></td>
                          </tr>
                          <%rentas_terminadas.each do |renta|%>
                        <tr>
                            <td><%= get_inquilinos(renta.inquilino_id).nombre%></td>
                            <td> <%= get_propiedads(renta.propiedad_id).to_label%></td>
                            <td><%= renta.costo%></td>
                            <td> <%= renta.inicio%></td>
                            <td><%= renta.final%></td>
                            <td><%= renta.dia%></td>
                            <td class="client-status">
                              <%= link_to "Ver", renta_path(renta), class: "btn btn-xs btn-info" %>
                            <%= link_to "Renovar", edit_renta_path(renta), class: "btn btn-xs btn-primary" %>
                              <%= link_to "Borrar", rentas_borrar_path(renta),
                                                                data: { confirm: "Se eliminaran todos los registros de pago ¿Estas seguro que quieres borrar esta renta? "},
                                                                class: "btn btn-xs btn-danger" %></td>
                        </tr>
                        <%end%>
                        <%end%>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>
