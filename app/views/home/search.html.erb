<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h2>Resultados</h2>

              <div class="clients-list">
                  <ul class="nav nav-tabs">
                      <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-home"></i> Rentas (<%= @ren.count %>)</a></li>
                      <li class = ""><a data-toggle="tab" href="#tab-2"><i class="fa fa-user"></i> Inquilinos (<%= @inq.count %>)</a></li>
                      <li class = ""><a data-toggle="tab" href="#tab-3"><i class="fa fa-building"></i> Propiedades (<%= @pro.count %>)</a></li>
                      <li class = ""><a data-toggle="tab" href="#tab-4"><i class="fa fa-money"></i> Pagos (<%= @pag.count %>)</a></li>
                      <li class = ""><a data-toggle="tab" href="#tab-5"><i class="fa fa-usd"></i> Gastos(<%= @gas.count %>)</a></li>

                  </ul>


              <div class="tab-content">
                  <div id="tab-1" class="tab-pane active">
                      <div class="full-height-scroll">
                          <div class="table-responsive">
                              <table class="table table-striped table-hover">
                                  <tbody>
                                      <%  if @ren  %>
                                    <%  if @ren.size > 0  %>
                                    <tr>
                                        <td><strong>Inquilino</strong></td>
                                        <td><strong>Propiedad</strong></td>
                                        <td><strong>Mensualidad</strong></td>
                                        <td><strong>Desde</strong></td>
                                        <td><strong>Hasta</strong></td>
                                        <td><strong>Dia de Pago</strong></td>
                                        <td><strong>Acciones</strong></td>
                                    </tr>
                                    <%@ren.each do |renta|%>
                                  <tr>
                                      <td><%=renta.inquilino.nombre%></td>
                                      <td> <%= renta.propiedad.to_label%></td>
                                      <td><%= renta.costo%></td>
                                      <td> <%= renta.inicio%></td>
                                      <td><%= renta.final%></td>
                                      <td><%= renta.dia%></td>
                                      <td class="client-status">
                                        <%= link_to "Ver", renta_path(renta), class: "btn btn-xs btn-info" %>
                                        <%= link_to "Editar", edit_renta_path(renta), class: "btn btn-xs btn-primary" %>
                                        <%= link_to "Terminar", rentas_terminar_path(renta),
                                                                          data: { confirm: "¿Estas seguro que quieres terminar esta renta?"},
                                                                          class: "btn btn-xs btn-danger" %></td>
                                  </tr>
                                  <%end %>
                                  <%end%>
                                  <%end %>
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>


                  <div id="tab-2" class="tab-pane">
                      <div class="full-height-scroll">
                          <div class="table-responsive">
                              <table class="table table-striped table-hover">
                                  <tbody>

                                    <% if @inq %>
                                    <% if @inq.size >0 %>
                                    <tr>
                                        <td><strong>Nombre</strong></td>
                                        <td><strong>Fecha de Nacimiento</strong></td>
                                        <td><strong>Pais de Nacimiento</strong></td>
                                        <td><strong>CURP</strong></td>
                                        <td><strong>RFC</strong></td>
                                        <td><strong>Acciones</strong></td>
                                    </tr>
                                    <% @inq.each do |iq| %>
                                  <tr>
                                      <td><%= iq.nombre%></td>
                                      <td> <%= iq.nacimiento%></td>
                                      <td><%= iq.nacionalidad%></td>
                                      <td> <%= iq.curp%></td>
                                      <td><%= iq.rfc%></td>
                                      <td class="client-status">
                                        <%= link_to "Ver", inquilino_path(iq), class: "btn btn-xs btn-info" %>
                                        <%= link_to "Editar", edit_inquilino_path(iq), class: "btn btn-xs btn-primary" %>
                                        <%= link_to "Borrar", inquilino_path(iq), method: :delete,
                                                                          data: { confirm: "¿Estas seguro que quieres borrar a este inquilino?"},
                                                                          class: "btn btn-xs btn-danger" %></td>
                                  </tr>
                                  <%end%>
                                  <%end%>
                                  <%end%>

                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>

                  <div id="tab-3" class="tab-pane">
                      <div class="full-height-scroll">
                          <div class="table-responsive">
                              <table class="table table-striped table-hover">
                                  <tbody>

                                    <% if @pro %>
                                    <% if @pro.size >0 %>
                                    <tr>
                                        <td><strong>Título</strong></td>
                                        <td><strong>Calle</strong></td>
                                        <td><strong>Estado</strong></td>
                                        <td><strong>CP</strong></td>
                                        <td><strong>Municipio</strong></td>
                                        <td><strong>Acciones</strong></td>
                                    </tr>
                                    <% @pro.each do |pr| %>
                                  <tr>
                                      <td><%= pr.nombre%></td>
                                      <td> <%= pr.calle%></td>
                                      <td><%= pr.estado%></td>
                                      <td> <%= pr.cp%></td>
                                      <td><%= pr.municipio%></td>
                                      <td class="client-status">
                                        <%= link_to "Ver", propiedad_path(pr), class: "btn btn-xs btn-info" %>
                                        <%= link_to "Editar", edit_propiedad_path(pr), class: "btn btn-xs btn-primary" %>
                                        <%= link_to "Borrar", propiedad_path(pr), method: :delete,
                                                                          data: { confirm: "¿Estas seguro que quieres borrar a este propiedad?"},
                                                                          class: "btn btn-xs btn-danger" %></td>
                                  </tr>
                                  <%end%>
                                  <%end%>
                                  <%end%>

                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>

          <div id="tab-4" class="tab-pane">
              <div class="full-height-scroll">
                  <div class="table-responsive">
                      <table class="table table-striped table-hover">
                          <tbody>

                            <% if @pag %>
                            <% if @pag.size >0 %>
                  <tr>
                      <td><strong>Inquilino</strong></td>
                      <td><strong>Propiedad</strong></td>
                      <td><strong>Categoría</strong></td>
                      <td><strong>Monto</strong></td>
                      <td><strong>Fecha</strong></td>
                      <td><strong>Comentarios</strong></td>
                      <td><strong>Acciones</strong></td>
                  </tr>
                  <% @pag.each do |pago| %>
                <tr>
                    <td><%= pago.rentas.inquilino.nombre%></td>
                    <td> <%= pago.rentas.propiedad.to_label%></td>
                    <td><%= pago.categoria.to_label%></td>
                    <td><%= pago.monto%></td>
                    <td> <%= pago.fecha%></td>
                    <td><%= pago.comentarios%></td>
                    <td class="client-status">  <%= link_to "Editar", edit_pago_path(pago), class: "btn btn-xs btn-primary" %>
                      <%= link_to "Borrar", pago_path(pago), method: :delete,
                                                        data: { confirm: "¿Estas seguro que quieres borrar a este pago?"},
                                                        class: "btn btn-xs btn-danger" %></td>
                </tr>
                <%end%>
                <%end%>
                <%end%>
              </tbody>
          </table>
          </div>
        </div>
      </div>


      <div id="tab-5" class="tab-pane">
          <div class="full-height-scroll">
              <div class="table-responsive">
                  <table class="table table-striped table-hover">
                      <tbody>

                        <% if @gas %>
                        <% if @gas.size >0 %>
                        <tr>
                            <td><strong>Propiedad</strong></td>
                            <td><strong>Categoría</strong></td>
                            <td><strong>Monto</strong></td>
                            <td><strong>Fecha</strong></td>
                            <td><strong>Comentarios</strong></td>
                            <td><strong>Acciones</strong></td>
                        </tr>
                        <% @gas.each do |gastoR|  %>
                      <tr>
                        <% if gastoR.propiedad_id.nil?%>
                          <td> N/A </td>
                            <% else%>
                          <td> <%= gastoR.propiedad.to_label%></td>
                            <% end%>
                          <td><%= gastoR.categoria.to_label%></td>
                          <td><%= gastoR.monto%></td>
                          <td> <%= gastoR.fecha%></td>
                          <td> <%= gastoR.comentarios%></td>
                          <td class="client-status">  <%= link_to "Editar", edit_gasto_path(gastoR), class: "btn btn-xs btn-primary" %>
                            <%= link_to "Borrar", gasto_path(gastoR), method: :delete,
                                                              data: { confirm: "¿Estas seguro que quieres borrar a este gasto?"},
                                                              class: "btn btn-xs btn-danger" %></td>
                      </tr>
                      <%end%>
                      <%end%>
                      <%end%>
                      </tbody>
                  </table>
            </div>
          </div>
        </div>
  </div>

</div>
