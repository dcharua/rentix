<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h2>Resultados</h2>
                    <p> Se encontaron <%= @inq.count %> inquilino/s, <%= @pro.count %> propiedad/es y <%= @ren.count %> renta/s</span>
                    </p>

              <div class="clients-list">
                  <ul class="nav nav-tabs">
                      <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-home"></i> Rentas</a></li>
                      <li class = ""><a data-toggle="tab" href="#tab-2"><i class="fa fa-user"></i> Inquilinos</a></li>
                      <li class = ""><a data-toggle="tab" href="#tab-3"><i class="fa fa-building"></i> Propiedades</a></li>
                  </ul>


              <div class="tab-content">
                  <div id="tab-1" class="tab-pane active">
                      <div class="full-height-scroll">
                          <div class="table-responsive">
                              <table class="table table-striped table-hover">
                                  <tbody>
                                      <%  if @ren  %>
                                    <%  if @ren.size > 0  %>
                                    <%@ren.each do |renta|%>
                                    <tr>
                                        <td><strong>Inquilino</strong></td>
                                        <td><strong>Propiedad</strong></td>
                                        <td><strong>Mensualidad</strong></td>
                                        <td><strong>Desde</strong></td>
                                        <td><strong>Hasta</strong></td>
                                        <td><strong>Dia de Pago</strong></td>
                                        <td><strong>Acciones</strong></td>
                                    </tr>
                                  <tr>
                                      <td><%= get_inquilinos(renta.inquilino_id).nombre%></td>
                                      <td> <%= get_propiedads(renta.propiedad_id).to_label%></td>
                                      <td><%= renta.costo%></td>
                                      <td> <%= renta.created_at%></td>
                                      <td><%= renta.final%></td>
                                      <td><%= renta.dia%></td>
                                      <td class="client-status">  <%= link_to "Editar", edit_renta_path(renta), class: "btn btn-xs btn-primary" %>
                                        <%= link_to "Terminar", rentas_terminar_path(renta),
                                                                          data: { confirm: "¿Estas seguro que quieres terminar esta renta?"},
                                                                          class: "btn btn-xs btn-danger" %></td>
                                  </tr>
                                  <%end %>
                                  <%end%>
                                  <%end %>
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>


                  <div id="tab-2" class="tab-pane">
                      <div class="full-height-scroll">
                          <div class="table-responsive">
                              <table class="table table-striped table-hover">
                                  <tbody>

                                    <% if @inq %>
                                    <% if @inq.size >0 %>
                                    <tr>
                                        <td><strong>Nombre</strong></td>
                                        <td><strong>Fecha de Nacimiento</strong></td>
                                        <td><strong>Pais de Nacimiento</strong></td>
                                        <td><strong>CURP</strong></td>
                                        <td><strong>RFC</strong></td>
                                        <td><strong>Acciones</strong></td>
                                    </tr>
                                    <% @inq.each do |iq| %>
                                  <tr>
                                      <td><%= iq.nombre%></td>
                                      <td> <%= iq.nacimiento%></td>
                                      <td><%= iq.nacionalidad%></td>
                                      <td> <%= iq.curp%></td>
                                      <td><%= iq.rfc%></td>
                                      <td class="client-status">  <%= link_to "Editar", edit_inquilino_path(iq), class: "btn btn-xs btn-primary" %>
                                        <%= link_to "Borrar", inquilino_path(iq), method: :delete,
                                                                          data: { confirm: "¿Estas seguro que quieres borrar a este inquilino?"},
                                                                          class: "btn btn-xs btn-danger" %></td>
                                  </tr>
                                  <%end%>
                                  <%end%>
                                  <%end%>

                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>

                  <div id="tab-3" class="tab-pane">
                      <div class="full-height-scroll">
                          <div class="table-responsive">
                              <table class="table table-striped table-hover">
                                  <tbody>

                                    <% if @pro %>
                                    <% if @pro.size >0 %>
                                    <tr>
                                        <td><strong>Título</strong></td>
                                        <td><strong>Calle</strong></td>
                                        <td><strong>Estado</strong></td>
                                        <td><strong>CP</strong></td>
                                        <td><strong>Municipio</strong></td>
                                        <td><strong>Acciones</strong></td>
                                    </tr>
                                    <% @pro.each do |pr| %>
                                  <tr>
                                      <td><%= pr.nombre%></td>
                                      <td> <%= pr.calle%></td>
                                      <td><%= pr.estado%></td>
                                      <td> <%= pr.cp%></td>
                                      <td><%= pr.municipio%></td>
                                      <td class="client-status">  <%= link_to "Editar", edit_propiedad_path(pr), class: "btn btn-xs btn-primary" %>
                                        <%= link_to "Borrar", propiedad_path(pr), method: :delete,
                                                                          data: { confirm: "¿Estas seguro que quieres borrar a este propiedad?"},
                                                                          class: "btn btn-xs btn-danger" %></td>
                                  </tr>
                                  <%end%>
                                  <%end%>
                                  <%end%>

                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
