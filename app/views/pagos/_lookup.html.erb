<div id="pago-lookup">
  <div class="input-group">
    <%= form_tag search_pagos_path, remote: true, method: :get, id: 'pago-lookup-form' do %>
      <%= text_field_tag :search_param, params[:search_param], placeholder: "Busca pagos por inquilino o propiedad", autofocus: true,
        class: 'input form-control' %>
        <span class="input-group-btn">
          <%= button_tag(type: :submit, class: "btn btn btn-primary") do %>
            <i class="fa fa-search"></i> Buscar
          <% end %>
      </span>
    <% end %>
  </div>
  <%= render 'shared/spinner' %>
  <% if @pag %>
  <% if @pag.size >0 %>
    <div id="pago-lookup-results" class="clients-list">
      <div class="full-height-scroll">
          <div class="table-responsive">
              <table class="table table-striped table-hover">
                  <tbody>
                    <tr>
                      <td><strong>Inquilino</strong></td>
                      <td><strong>Propiedad</strong></td>
                      <td><strong>Monto</strong></td>
                      <td><strong>Fecha</strong></td>
                      <td><strong>Mes</strong></td>
                      <td><strong>Acciones</strong></td>
                    </tr>
                    <% @pag.each do |pa| %>
                  <tr>
                      <td><%= get_inquilinos(pa.rentas.inquilino_id).nombre%></td>
                      <td> <%= get_propiedads(pa.rentas.propiedad_id).nombre%></td>
                      <td><%= pa.monto%></td>
                      <td> <%= pa.fecha%></td>
                      <td><%= pa.mes%></td>
                      <td class="client-status">  <%= link_to "Editar", edit_pago_path(pa), class: "btn btn-xs btn-primary" %>
                        <%= link_to "Borrar", pago_path(pa), method: :delete,
                                                          data: { confirm: "Â¿Estas seguro que quieres borrar a este pago?"},
                                                          class: "btn btn-xs btn-danger" %></td>
                  </tr>
                  <%end%>
                  </tbody>
              </table>
          </div>
      </div>
    </div>
    <%else%>
      <h3>No se encontraron pagos</h3>
    <%end%>
  <%end%>
  <div id="pago-lookup-errors"></div>
</div>
