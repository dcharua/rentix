<%= render 'shared/errors', obj: @pago %>

<script type="text/javascript">

$(document).ready(function() {
  $(".pa").select2();
  language: "es"
});
</script>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Introduce los datos del nuevo Pago</h5>
            </div>
            <div class="ibox-content">
              <%= simple_form_for @pago, html: {id:"form", class: "wizard-big form-horizontal", required: true} do |f| %>
                    <div class="form-group col-md-12">
                      <%= f.association :rentas , :collection => rentas_activas.order(:inquilino_id),  input_html: {class: "pa form-control"}%>
                    </div>
                    <div class="form-group">
                    <%= f.label :monto, 'Monto', class: "col-md-2 control-label", required: true %>
                        <div class="col-md-4">
                          <%= f.number_field :monto %>
                        </div>
                        <%= f.label :fecha, "Fecha del pago", class: "col-md-2 control-label",  required: true %>
                          <div class="col-md-4">
                            <%= f.text_field :fecha, data:{ provide:'datepicker' }, class:"datepicker form-control", required: true%>
                          </div>
                    </div>
                    <div class="form-group ">
                      <%= f.label :mes, 'Correspondiente al mes', class: "col-md-5 control-label center", required: true %>
                          <div class="col-md-4">
                            <%= f.number_field :mes %>
                          </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <%= f.submit 'Crear', class: 'btn btn-primary btn-lg center' %>
                        </div>
                    </div>
                  <% end %>
            </div>
        </div>
    </div>
</div>
