<div class="clients-list">
    <ul class="nav nav-tabs">
        <span class="pull-right small text-muted">Tienes <%=@pagos.count%> Inquilinos</span>
        <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> Inquilinos</a></li>
    </ul>
    <div class="tab-content">
        <div id="tab-1" class="tab-pane active">
            <div class="full-height-scroll">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                          <tr>
                              <td><strong>Inquilino</strong></td>
                              <td><strong>Propiedad</strong></td>
                              <td><strong>Monto</strong></td>
                              <td><strong>Fecha</strong></td>
                              <td><strong>Regitrado en Sistema</strong></td>
                              <td><strong>Acciones</strong></td>
                          </tr>
                          <% @pagos.each do |pago| %>
                        <tr>
                            <td><%= get_inquilinos(pago.rentas.inquilino_id).nombre%></td>
                            <td> <%= get_propiedads(pago.rentas.propiedad_id).nombre%></td>
                            <td><%= pago.monto%></td>
                            <td> <%= pago.fecha%></td>
                            <td><%= pago.created_at%></td>
                            <td class="client-status">  <%= link_to "Editar", edit_pago_path(pago), class: "btn btn-xs btn-primary" %>
                              <%= link_to "Borrar", pago_path(pago), method: :delete,
                                                                data: { confirm: "Â¿Estas seguro que quieres borrar a este pago?"},
                                                                class: "btn btn-xs btn-danger" %></td>
                        </tr>
                        <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
