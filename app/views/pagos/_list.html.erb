                        <tbody>
                          <%  if @pagosR  %>
                        <%  if @pagosR.size > 0  %>
                          <tr>
                              <td><strong>Inquilino</strong></td>
                              <td><strong>Propiedad</strong></td>
                              <td><strong>Monto</strong></td>
                              <td><strong>Fecha</strong></td>
                              <td><strong>Mes</strong></td>
                              <td><strong>Comentarios</strong></td>
                              <td><strong>Acciones</strong></td>
                          </tr>
                          <% @pagosR.each do |pagoR| %>
                        <tr>
                            <td><%= get_inquilinos(pagoR.rentas.inquilino_id).nombre%></td>
                            <td> <%= get_propiedads(pagoR.rentas.propiedad_id).nombre%></td>
                            <td><%= pagoR.monto%></td>
                            <td> <%= pagoR.fecha%></td>
                            <td><%= pagoR.mes.strftime("%m")%></td>
                            <td> <%= pagoR.comentarios%></td>
                            <td class="client-status">  <%= link_to "Editar", edit_pago_path(pagoR), class: "btn btn-xs btn-primary" %>
                              <%= link_to "Borrar", pago_path(pagoR), method: :delete,
                                                                data: { confirm: "¿Estas seguro que quieres borrar a este pago?"},
